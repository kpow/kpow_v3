{
  "include": ["client/src/**/*", "db/**/*", "server/**/*", "types/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@db": ["./db/index.ts"],
      "@db/*": ["./db/*"],
      "@/*": ["./client/src/*"],
      "@/components/shared/*": ["./client/src/components/shared/*"],
      "@/components/shared/ui/*": ["./client/src/components/shared/ui/*"],
      "@/components/shared/layout/*": ["./client/src/components/shared/layout/*"],
      "@/components/home/*": ["./client/src/components/home/*"],
      "@/components/battle/*": ["./client/src/components/battle/*"],
      "@/components/phashboard/*": ["./client/src/components/phashboard/*"],
      "@/components/donut-tour/*": ["./client/src/components/donut-tour/*"],
      "@/components/media/*": ["./client/src/components/media/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"]
    }
  }
}